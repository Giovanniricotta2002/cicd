/* widget signatures */
div.ui-state-warning {
   background: #ffdab6 !important;
   border-color: #f9a567 !important;
   color: #a84600 !important;
}
div.ui-state-warning .ui-icon-info {
    filter: hue-rotate(165deg);
}

.widget-content .container {
  box-sizing: border-box;
  max-width : 550px;
  font-size:14px;
  padding: 25px;
}
.widget-content div.message {
   margin: 10px 20px 0;
}
.widget-content div.message .text .link {
   text-decoration: underline;
   font-weight: 600;
}
.widget-content div.message.ui-state-warning .text .link {
   color: #a84600 !important;
}
.widget-content div.message.ui-state-error .text .link {
   color: #ce0505 !important;
}

.widget-suivi-conso-stats {
  display: flex;
  justify-content: space-between;
  padding:0;
  padding-bottom: 25px;
  gap: 1em;
  .statistic {
    div {
      display: flex;
      align-items: center;
      gap: 1.25em
    }
  }
}

.widget-suivi-conso-stats .statistic h4 {
  font-size:12px;
  font-weight: 500;
  color: #8a8484;
  text-transform:uppercase;
  margin-left: 35px;
}

.widget-suivi-conso-stats .statistic .count {
  /* white-space: nowrap; */
  font-size:1.5em;
  font-weight:700;
}

.widget-suivi-conso-stats .statistic .disk {
  display:inline-block;
  height: 15px;
  width: 15px;
  border-radius:50%;
}

.widget-suivi-conso-stats .statistic.info .disk,
.widget-suivi-conso-progress .signature-progress-bar.info {
  background-color: #36a2eb;
}
.widget-suivi-conso-stats .statistic.remaining .disk {
  background-color: #ccc;
}
.widget-suivi-conso-stats .statistic.warning .disk,
.widget-suivi-conso-progress .signature-progress-bar.warning {
  background-color: #ff7c00;
}
.widget-suivi-conso-stats .statistic.error .disk,
.widget-suivi-conso-progress .signature-progress-bar.error {
  background-color: #ce0505;
}

.widget-suivi-conso-progress {
  position: relative;
  font-size:1.5em;
  color: #fff;
  font-weight: 700;
  background: #ccc;
  width:100%;
  height: 35px;
  border-radius: 50px;
}

.widget-suivi-conso-progress .signature-progress-bar {
  border-radius: 50px;
  height:100%;
  min-width: 44px;
  max-width: 100%;
}

.widget-suivi-conso-progress .percent {
  position:absolute;
  top:0;
  left:0;
  height: 100%;
  width: 100%;
  margin:0;
  text-align:center;
  line-height: 35px;
}

.widget-content .container .statistic.error+.statistic.remaining .quota {
    display: none;
}
