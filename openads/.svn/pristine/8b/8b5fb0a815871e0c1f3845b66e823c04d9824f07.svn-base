/* Overlays */
.ui-widget-overlay {
    position:fixed;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 100% !important;

}

.ui-dialog {
    position: absolute;
    overflow: hidden;
    padding: 1em;
    /* width: unset !important; */
    min-width: 300px;
    border-radius: .5em;
    border: solid 1px $gris10;
    background-color: white;
    @include noBorderShadow(1px, 2px);
    /* border-radius: 1em; */

    .ui-dialog-titlebar {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding-bottom: .5em;
        margin-bottom: 1em;
        border-bottom: 1px solid $brand200;
    }

    .ui-dialog-title {
        font-weight: 700;
        font-size: 1.2em;
    }

    .ui-dialog-content.ui-widget-content {
        height: unset;
        overflow: hidden;
    }

    // BUttons at the bottom of overlay dialog
    &-buttonpane {
        div.ui-dialog-buttonset {
            display: flex;
            justify-content: center;

            button.ui-button {
                margin-bottom: 0;
            }
        }

        .ui-button.ui-dialog-button-cancel {
            @include buttonSecondary;
        }
    }

    .pageDescription {
        margin-bottom: 2em;
    }

    .formControls {
        display: flex;
        // Workaround pour que les tests robotframework passent
        margin: 1em -1px 0;

        input.om-button.boutonFormulaire {
            margin-bottom: 0;
        }

        :not(#portlet-actions) .delete-16 {
            @include buttonDanger;
        }
    }

    p.ui-button:not(.ui-datepicker-trigger):not(.httpclickbutton):not([id*="search"]),
    input.ui-button:not(.ui-datepicker-trigger):not(.httpclickbutton):not([id*="search"]) {
        display: inline-block;
    }

    p.ui-button:not(.ui-datepicker-trigger):not(.httpclickbutton):not([id*="search"]) {
        @include buttonSecondary;

        a {
            color: $brandDark;
            margin: 0 .5em;
        }
    }

    #archive_download_link {
        @include buttonPrimary;
        margin: 1em 0;
    }

    #sousform-donnees_techniques #portlet-actions {
        margin: 0;
        margin-top: -4.4em;
        .portlet-list {
            justify-content: flex-end;
        }

        &:after {
            display: block;
            content: "";
            clear: both;
        }
    }

    #sousform-petitionnaire,
    #sousform-delegataire,
    #sousform-proprietaire,
    #sousform-architecte_lc,
    #sousform-paysagiste,
    #sousform-bailleur,
    #sousform-plaignant,
    #sousform-requerant,
    #sousform-avocat,
    #sousform-contrevenant {
        input[type="checkbox"] {
            width: auto;
        }
/*         [id*="-etat-civil"],
        [id*="-personne-morale"] {
